{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"src/**/*.ts",
			"scripts/**/*.js",
			"jest.config.ts",
			"ts.config.json",
			"biome.json",
			"package.json"
		],
		"ignore": ["node_modules", "dist"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120
		}
	}
}
